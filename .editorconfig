; EditorConfig is awesome: http://EditorConfig.org
; top-most EditorConfig file
root = true

; Unix-style
[*]
end_of_line = lf
charset = utf-8

[.bowerrc]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 4

[.jshintrc]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4
